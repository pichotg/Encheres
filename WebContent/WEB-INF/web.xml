<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>TrocEncheres</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>ServletConnexion</servlet-name>
    <servlet-class>servlets.connexion.ServletConnexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletConnexion</servlet-name>
    <url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletDeconnexion</servlet-name>
    <servlet-class>servlets.connexion.ServletDeconnexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletDeconnexion</servlet-name>
    <url-pattern>/deconnexion</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletFiltre</servlet-name>
    <servlet-class>servlets.article.ServletFiltre</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletFiltre</servlet-name>
    <url-pattern>/filtre</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletListeAccueil</servlet-name>
    <servlet-class>servlets.article.ServletListeAccueil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletListeAccueil</servlet-name>
    <url-pattern>/index.jsp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletProfil</servlet-name>
    <servlet-class>servlets.utilisateur.ServletProfil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletProfil</servlet-name>
    <url-pattern>/profil/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletCreationCompte</servlet-name>
    <servlet-class>servlets.utilisateur.ServletCreationCompte</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletCreationCompte</servlet-name>
    <url-pattern>/creerCompte</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletModifierProfil</servlet-name>
    <servlet-class>servlets.utilisateur.ServletModifierProfil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletModifierProfil</servlet-name>
    <url-pattern>/modifierProfil</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletVente</servlet-name>
    <servlet-class>servlets.article.ServletVente</servlet-class>
	<init-param>
		<param-name>chemin</param-name> 
		<param-value>C:\temp\imageArticle\</param-value> 
	</init-param>
    <multipart-config>
		<location>C:\temp\imageArticle\</location>
		<max-file-size>10485760</max-file-size> <!-- 10 Mo -->
		<max-request-size>52428800</max-request-size> <!-- 5 x 10 Mo -->
		<file-size-threshold>1048576</file-size-threshold> <!-- 1 Mo -->
	</multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletVente</servlet-name>
    <url-pattern>/vente/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletAjouterEnchere</servlet-name>
    <servlet-class>servlets.enchere.ServletAjouterEnchere</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletAjouterEnchere</servlet-name>
    <url-pattern>/ajouterEnchere</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletAccesVente</servlet-name>
    <servlet-class>servlets.article.ServletAccesVente</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletAccesVente</servlet-name>
    <url-pattern>/accesVente/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletDetailVente</servlet-name>
    <servlet-class>servlets.article.ServletDetailVente</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletDetailVente</servlet-name>
    <url-pattern>/detailVente</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>ServletFilter</filter-name>
    <filter-class>servlets.filters.ServletFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ServletFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>